<h3>ユーザー詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  
  <tr>
    <th>開始日</th>
    <td><%= @post.start_date.to_s(:date_jp) %></td>
  </tr>
  
  <tr>
    <th>投稿日時</th>
    <td><%= @post.created_at.to_s(:datetime_jp) %></td>
  </tr>
  
  <tr>
    <th>終日</th>
    <td>
      <% if @post.all_day %>
        ◯
      <% end %>
    </td>
  </tr>
  
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧ページに戻る", posts_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_post_path(@post.id) %></li>
    <li><%= link_to "スケジュールを削除する", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか?" } %></li>
  </ul>
</div>
